doctype html
html
    title=`(${Object.keys(cache).length}) Errors`
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='description', content='Some description')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='title' content=`(${Object.keys(cache).length}) Errors`)
        style
            include style.css
        script.
            function deleteError(id){
                var xhr = new XMLHttpRequest();
                xhr.open('DELETE', '/delete/' + id, true);
                xhr.send();
                xhr.onreadystatechange = function() {
                    if (xhr.readyState != 4) return;
                    if (xhr.status != 200) {
                        alert(xhr.status + ': ' + xhr.statusText);
                    } else {
                        location.reload();
                    }
                }
            }

            function toggleView(e, item) {
                e.classList.toggle("isopen");
                e.children[0].classList.toggle("transparent");
                console.log(item)
            }
    body
        header
            h2= "Errors!!!"
        main
            div(class="container")
                each item in cache
                    div(class="entry")
                        div(class="realm" + item.realm.replaceAll("'", ""))= ""
                        .title(onclick=`toggleView(this)`)= item.name
                            .sub.transparent= item.stack
                        button(class="delete" type='button' onclick='deleteError(' + item.hash + ')')= "âœ–"